{
  "info": {
    "name": "ZecPath API",
    "description": "Complete API collection for ZecPath job portal",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "refresh_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Home API",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/",
              "host": ["{{base_url}}"],
              "path": [""]
            }
          }
        },
        {
          "name": "Signup",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data) {",
                  "        pm.environment.set('access_token', response.data.access);",
                  "        pm.environment.set('refresh_token', response.data.refresh);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"testpass123\",\n    \"role\": \"candidate\",\n    \"first_name\": \"Test\",\n    \"last_name\": \"User\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/signup/",
              "host": ["{{base_url}}"],
              "path": ["auth", "signup", ""]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data) {",
                  "        pm.environment.set('access_token', response.data.access);",
                  "        pm.environment.set('refresh_token', response.data.refresh);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"testpass123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login/",
              "host": ["{{base_url}}"],
              "path": ["auth", "login", ""]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"refresh\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/logout/",
              "host": ["{{base_url}}"],
              "path": ["auth", "logout", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Security Tests",
      "item": [
        {
          "name": "401 - Unauthorized Access",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/profile/",
              "host": ["{{base_url}}"],
              "path": ["api", "profile", ""]
            }
          }
        },
        {
          "name": "403 - Role Violation (Candidate->Admin)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/admin/dashboard/",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "dashboard", ""]
            }
          }
        },
        {
          "name": "404 - Not Found",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/jobs/999/update/",
              "host": ["{{base_url}}"],
              "path": ["api", "jobs", "999", "update", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Jobs API",
      "item": [
        {
          "name": "200 - Get All Jobs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/jobs/",
              "host": ["{{base_url}}"],
              "path": ["api", "jobs", ""]
            }
          }
        },
        {
          "name": "201 - Create Job",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"Software Developer\",\n    \"description\": \"Looking for a skilled software developer\",\n    \"location\": \"New York\",\n    \"status\": \"published\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/jobs/create/",
              "host": ["{{base_url}}"],
              "path": ["api", "jobs", "create", ""]
            }
          }
        },
        {
          "name": "400 - Bad Request (Invalid Data)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"\",\n    \"description\": \"\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/jobs/create/",
              "host": ["{{base_url}}"],
              "path": ["api", "jobs", "create", ""]
            }
          }
        }
      ]
    }
  ]
}